<h3 class="text-center text-uppercase">Summary for <%= @motel.name %></h3>
<hr>
<%= render "shared/summary", bookings: @bookings %>

<h3 class="text-center text-uppercase">Recent Bookings</h3>
<hr>
<div class="messages-container">
  <div class="row">
    <div class="col-xs-12">
      <% @bookings.each do |booking| %>
      <%= render "shared/item", booking: booking %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/item-modal' %>