<%= link_to motel_booking_path(@motel, booking), remote: true do %>
<div class="message">
  <div class="message-name">
    <h3><%= booking.paid_at.to_time.strftime("%b").upcase %></h3>
    <p><%= booking.paid_at.to_time.strftime("%d") %></p>
  </div>
  <div class="message-body">
    <p><strong><%= booking.room.name %><span class="hidden-sm hidden-xs"> - <%= booking.booking_period %></span></strong></p>
    <p><%= @motel.name %></p>
  </div>
  <div class="message-status">
    <p class="price"><%= number_to_currency(booking.amount_centavos / 100, unit: "", precision: 2) %> BRL</p>
  </div>
</div>
<% end %>